@model List<ProductResponseModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    if (Model?.Count > 0)
    {
        <a asp-controller="Product" asp-action="Create" class="btn btn-primary btn-sm">Create Product</a>
        <table class="table">

            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Price</th>
                    <th scope="col">CategoryId</th>
                    <th scope="col">Operation</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td></td>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>@product.Stock</td>
                        <td>@product.Price</td>
                        <td>@product.CategoryId</td>
                        <td>
                            <a asp-controller="Product" asp-action="Remove" asp-route-Id="@product.Id" class="btn btn-danger btn-sm">Sil</a>
                            <a asp-controller="Product" asp-action="Update" asp-route-Id="@product.Id" class="btn btn-warning btn-sm">Update</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-danger">
            <h1>No Product Found</h1>
        </div>
    }
}