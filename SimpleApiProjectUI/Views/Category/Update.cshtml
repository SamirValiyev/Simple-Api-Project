@model CategoryRequestModel;
@{
    Layout = "_Layout";
}

<form class="form-control" asp-action="Update" asp-controller="Category" method="post">

    <input  type="hidden" asp-for="@Model.Id"/>
 
    <div class="mb-3">
        <label asp-for="@Model.Id" class="form-label">Id:</label>
        <input asp-for="@Model.Id" class="form-control" placeholder="Id" />
        <span asp-validation-for="Id" lass="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Name" class="form-label">Name:</label>
        <select class="form-select" asp-items="@Model.Categories" asp-for="@Model.Name">
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Definition" class="form-label">Definition:</label>
        <input asp-for="@Model.Definition" class="form-control" placeholder="Definition" />
        <span asp-validation-for="Definition" class="text-danger"></span>
    </div>




    <button type="submit" class="btn btn-warning">Save</button>
</form>